        <div class="form-group">
        <label for="email">Mot de passe</label>
            <input type="password" name="password" class="form-control formeControl" placeholder="Mot de  passe" required="required">
        </div>
                <div class="form-group">
                <label for="email">Confimer votre mot de passe</label>
            <input type="password" name="password_confimed" class="form-control formeControl" placeholder="Confirmation de mot de passe" required="required">
        </div>
