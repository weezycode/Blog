            <input type="text" name="pseudo" class="form-control formeControl" placeholder="Pseudo" value="{{ _post.pseudo }}" required="required">
        </div>
        <div class="form-group">
        <label for="email">Email</label>
            <input type="email" name="email"class="form-control formeControl" placeholder="Email" value="{{ _post.email }}" required="required">
